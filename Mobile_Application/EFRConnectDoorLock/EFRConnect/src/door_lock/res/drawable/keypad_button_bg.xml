<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="@android:integer/config_shortAnimTime">

    <item android:state_pressed="false">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="@color/silabs_red" />
            <gradient android:angle="270" android:endColor="@color/silabs_black" android:startColor="@color/silabs_red" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="oval" android:thickness="1dp">
            <stroke android:width="1dp" android:color="@color/silabs_blue" />
            <gradient android:angle="270" android:endColor="@color/silabs_white" android:startColor="@color/silabs_red_selected" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="@color/silabs_blue" />
            <gradient android:angle="270" android:endColor="@color/silabs_white" android:startColor="@color/silabs_blue_selected" />
        </shape>
    </item>

    <item android:state_activated="true">
        <shape android:shape="oval" android:thickness="1dp">
            <stroke android:width="1dp" android:color="@color/silabs_white" />
            <gradient android:angle="270" android:endColor="@color/statusbar_background" android:startColor="@color/silabs_blue" />
        </shape>
    </item>
</selector>