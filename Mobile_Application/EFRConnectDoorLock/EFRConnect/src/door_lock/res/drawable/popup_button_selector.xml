<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="0dp" android:color="@color/silabs_black" />
            <gradient android:angle="270" android:endColor="@color/silabs_red" android:startColor="@color/silabs_transparent_dark" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle" android:thickness="0dp">
            <stroke android:width="1dp" android:color="@color/silabs_black" />
            <gradient android:angle="270" android:endColor="@color/silabs_transparent_dark" android:startColor="@color/silabs_red_selected" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle" android:thickness="0dp">
            <stroke android:width="1dp" android:color="@color/silabs_black" />
            <gradient android:angle="270" android:endColor="@color/silabs_transparent_dark" android:startColor="@color/silabs_red_selected" />
        </shape>
    </item>

    <item android:state_activated="true">
        <shape android:shape="rectangle" android:thickness="1dp">
            <stroke android:width="1dp" android:color="@color/silabs_black" />
            <gradient android:angle="270" android:endColor="@color/silabs_transparent_dark" android:startColor="@color/silabs_red_selected" />
        </shape>
    </item>

</selector>