<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="5000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1440">
    <shape
        android:innerRadiusRatio="2.5"
        android:shape="ring"
        android:thicknessRatio="12"
        android:useLevel="false">

        <size
            android:width="@dimen/dialog_loading_spinner_diameter"
            android:height="@dimen/dialog_loading_spinner_diameter" />

        <gradient
            android:centerColor="@color/silabs_red"
            android:endColor="@color/silabs_blue"
            android:startColor="@color/silabs_white"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>