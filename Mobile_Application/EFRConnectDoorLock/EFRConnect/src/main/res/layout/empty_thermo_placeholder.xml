<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/empty_thermometer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/empty_thermo_header_margin"
        android:gravity="center"
        android:text="@string/no_logged_temps"
        android:textSize="@dimen/empty_thermo_header_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/empty_thermo_subheader_margin"
        android:gravity="center"
        android:text="@string/you_can_add_temp"
        android:textSize="@dimen/empty_thermo_subheader_text_size" />

</LinearLayout>