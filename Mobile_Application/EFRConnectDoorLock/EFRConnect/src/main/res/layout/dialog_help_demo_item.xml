<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/help_button_height"
            android:background="@color/silabs_dialog_title_background"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/info"
            android:textColor="@color/silabs_primary_text"
            android:textSize="18sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/silabs_white"
                android:orientation="vertical"
                android:padding="@dimen/help_text_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/about_silicon_labs"
                    android:textColor="@color/silabs_subtle_text"
                    android:textSize="@dimen/help_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/silabs_secondary_background" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/help_section_and_body_separation"
                    android:fontFamily="sans-serif"
                    android:text="@string/help_text_moreinfo_label"
                    android:textColor="@color/silabs_primary_text"
                    android:textSize="@dimen/help_text_size" />

                <TextView
                    android:id="@+id/silabs_products_wireless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/help_text_moreinfo_url"
                    android:textColor="@color/silabs_blue"
                    android:textSize="@dimen/help_text_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/help_section_and_body_separation"
                    android:fontFamily="sans-serif"
                    android:text="@string/help_text_support_label"
                    android:textColor="@color/silabs_primary_text"
                    android:textSize="@dimen/help_text_size" />

                <TextView
                    android:id="@+id/silabs_support"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/help_text_support_url"
                    android:textColor="@color/silabs_blue"
                    android:textSize="@dimen/help_text_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/help_section_and_body_separation"
                    android:fontFamily="sans-serif"
                    android:text="@string/help_text_sourcecode_label"
                    android:textColor="@color/silabs_primary_text"
                    android:textSize="@dimen/help_text_size" />

                <TextView
                    android:id="@+id/github_siliconlabs_efrconnect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/help_text_sourcecode_url"
                    android:textColor="@color/silabs_blue"
                    android:textSize="@dimen/help_text_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/help_section_and_body_separation"
                    android:fontFamily="sans-serif"
                    android:text="@string/help_text_users_guide_label"
                    android:textColor="@color/silabs_primary_text"
                    android:textSize="@dimen/help_text_size" />

                <TextView
                    android:id="@+id/users_guide_efrconnect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/help_text_users_guide_url"
                    android:textColor="@color/silabs_blue"
                    android:textSize="@dimen/help_text_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/help_section_and_body_separation"
                    android:fontFamily="sans-serif"
                    android:text="@string/help_text_documentation_label"
                    android:textColor="@color/silabs_primary_text"
                    android:textSize="@dimen/help_text_size" />

                <TextView
                    android:id="@+id/docs_silabs_bluetooth_latest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/help_text_documentation_url"
                    android:textColor="@color/silabs_blue"
                    android:textSize="@dimen/help_text_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/help_section_and_body_separation"
                    android:fontFamily="sans-serif"
                    android:text="@string/help_text_pub_label"
                    android:textColor="@color/silabs_primary_text"
                    android:textSize="@dimen/help_text_size" />

                <TextView
                    android:id="@+id/help_text_playstore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/help_Google_Play_Store"
                    android:textColor="@color/silabs_blue"
                    android:textSize="@dimen/help_text_size" />

                <TextView
                    android:id="@+id/dialog_help_version_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/help_body_and_version_separation"
                    android:fontFamily="sans-serif"
                    android:textSize="@dimen/help_text_size" />

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/help_ok_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/help_button_height"
            android:background="@drawable/red_button_selector"
            android:fontFamily="sans-serif-medium"
            android:text="@string/ok"
            android:textColor="@color/silabs_white"
            android:textSize="@dimen/help_dialog_ok_btn_text_size" />

    </LinearLayout>
</androidx.cardview.widget.CardView>