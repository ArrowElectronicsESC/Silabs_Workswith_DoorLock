<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/saved_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp"
    android:weightSum="2">

    <TextView
        android:id="@+id/textview_saved_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:fontFamily="sans-serif"
        android:textColor="@color/silabs_subtle_text"
        android:textSize="@dimen/filter_saved_search_text_size" />

    <Button
        android:id="@+id/removeBtn"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_gravity="end|center_vertical"
        android:layout_weight="1"
        android:background="@android:drawable/ic_menu_delete"
        android:fontFamily="sans-serif-medium"
        android:textSize="@dimen/browser_button_text_size" />


</LinearLayout>