<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    style="@style/ToolbarStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:fitsSystemWindows="true"
    android:gravity="end"
    android:minHeight="@dimen/toolbar_min_height"
    android:paddingTop="24dp"
    android:paddingBottom="8dp"
    app:titleMarginBottom="0dp"
    app:titleMarginTop="0dp"
    app:titleTextAppearance="@style/TextAppearance.ToolbarTitle">

    <RelativeLayout
        android:layout_width="@dimen/actionbar_main_help_btn_container_width"
        android:layout_height="@dimen/actionbar_main_help_btn_container_height"
        android:layout_gravity="end|center_vertical"
        android:gravity="center"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/info"
            android:src="@drawable/home_help_phone" />

        <Button
            android:id="@+id/help_button"
            android:layout_width="@dimen/actionbar_main_help_btn_width"
            android:layout_height="@dimen/actionbar_main_help_btn_height"
            android:layout_centerInParent="true"
            android:background="?android:attr/selectableItemBackground" />
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>